{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
  },
  "include": [
    "*.ts",
    "*.js",
    "env.d.ts",
    "forge.env.d.ts",
    "src/preload.ts",
    "src/main.ts",
    "src/renderer.ts"
  ],
  "exclude": [
    "vite.renderer.config.ts",
    "src/app/**/*.ts",
    "src/app/**/*.js",
    "components.d.ts",
    "auto-imports.d.ts",
    "eslint.config.ts",
  ]
}
